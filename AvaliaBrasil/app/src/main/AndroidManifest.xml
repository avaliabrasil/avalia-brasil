<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.avaliabrasil.avaliabrasil">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PlaceActivity"
            android:label="@string/title_activity_place"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.avaliabrasil.avaliabrasil.MainActivity" />
        </activity>
        <activity
            android:name=".EvaluationActivity"
            android:label="@string/title_activity_evaluation"
            android:parentActivityName=".PlaceActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.avaliabrasil.avaliabrasil.PlaceActivity" />
        </activity>
        <activity
            android:name=".PlaceStatisticsActivity"
            android:label="@string/title_activity_place_statistics"
            android:parentActivityName=".PlaceActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.avaliabrasil.avaliabrasil.PlaceActivity" />
        </activity>
        <activity
            android:name=".RankingActivity"
            android:label="@string/title_activity_ranking"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.avaliabrasil.avaliabrasil.MainActivity" />
        </activity>
        <activity
            android:name=".NewPlaceActivity"
            android:label="@string/title_activity_new_place"
            android:parentActivityName=".PlaceActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.avaliabrasil.avaliabrasil.PlaceActivity" />
        </activity>
    </application>

</manifest>
