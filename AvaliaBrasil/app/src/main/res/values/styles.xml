<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MainActionButton">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/background_light</item>
    </style>


    <style name="SecondaryActionButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FacebookButton">
        <item name="android:background">@color/facebookBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/background_light</item>
    </style>

    <style name="FacebookSecondaryButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/facebookBlue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DefaultText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blackText</item>
    </style>

    <style name="DefaultText.GreyText">
        <item name="android:textColor">@color/greyText</item>
    </style>

</resources>
